# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_style = tab
indent_size = 8
tab_width = 8

# Python files
[*.py]
indent_style = space
indent_size = 4

# CMake files
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Kconfig files
[Kconfig*]
indent_style = tab
indent_size = 8

# Device tree files
[*.{dts,dtsi,overlay}]
indent_style = tab
indent_size = 8

# JSON files
[*.json]
indent_style = space
indent_size = 2
